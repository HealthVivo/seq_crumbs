#!/usr/bin/env python

from vcf_crumbs.filters import (BiallelicFilter, filter_snvs,
                                setup_filter_argparse, parse_filter_args)


def main():
    description = 'Filter the SNVs of a VCF file'
    parser = setup_filter_argparse(description=description)
    kwargs = parse_filter_args(parser)

    filter_ = BiallelicFilter()
    kwargs['filters'] = [filter_]
    filter_snvs(**kwargs)


if __name__ == '__main__':
    main()
